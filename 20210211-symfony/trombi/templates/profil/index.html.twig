{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		{% for p in profils %}
			<div class="card" style="width:400px">
				<img class="card-img-top" src="{{ p.avatar }}" alt="Card image"/>
				<div class="card-body">
					<h4 class="card-title">{{ p.fullname }}</h4>
					<p class="card-text"></p>
					<a href="{{ path('profil_show', {"id": p.id}) }}" class="btn btn-primary stretched-link">Voir Profil</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
